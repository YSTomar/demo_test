<%- model_class = Presentation -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @presentation.title %></dd>
  <dd><iframe src="https://docs.google.com/viewer?url=<%= URI.escape(request.protocol+request.host+':'+request.port.to_s + @presentation.document.url) -%>&embedded=true" style="width:600px; height:400px;" frameborder="0"></iframe>
    </dd>
</dl>



<%= link_to t('.back', :default => t("helpers.links.back")),
              presentations_path, :class => 'btn btn-default'  %>
<%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_presentation_path(@presentation), :class => 'btn btn-default' %>
<%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              presentation_path(@presentation),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>

